@model EmployeeDetailViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<h1 style="color:blue">Employee Details</h1>

<div>
    <h2>@Model.FirstName @Model.LastName</h2>
    <p>Email: <strong>@Model.Email</strong> </p>
    <p>Job Name: <strong>@Model.JobName</strong></p>
</div>

<h3>Tasks</h3>
<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Start Date Time</th>
            <th>End Date Time</th>
            <th>Description</th>
            <th>Shift Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.TaskId</td>
                <td>@task.StartDateTime</td>
                <td>@task.EndDateTime</td>
                <td>@task.Description</td>
                <td>@task.ShiftType</td>
            </tr>
        }
    </tbody>
</table>
